{% extends "backoffice/base.html.twig" %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Nouvel article</h4>
                        </div>
                        <div class="content">
                            <form>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label>Company (disabled)</label>
                                            <input type="text" class="form-control" disabled placeholder="Company" value="Creative Code Inc.">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Titre</label>
                                            <input type="text" class="form-control" placeholder="Titre" name="title">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Auteur</label>
                                            <input type="text" class="form-control" name="author" placeholder="Auteur">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Rubrique</label>
                                            <input type="text" class="form-control" name="rubrique" placeholder="Rubrique">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Date</label>
                                            <input type="text" class="form-control" name="date" placeholder="Date">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Mots clés&</label>
                                            <select class="p-3 mb-2 bg-success text-white" id="tags-input" multiple data-role="tagsinput">
                                                <option value="Bulle financière">Bulle financière</option>
                                                <option value="Banqueroute">Banqueroute</option>
                                                <option value="Spéculations">Spéculations</option>
                                                <option value="Bitcoins">Bitcoins</option>
                                                <option value="Xavier Niel">Xavier Niel</option>
                                                <option value="Elon Musk">Elon Musk</option>
                                                <option value="Paradis fiscaux">Paradis fiscaux</option>
                                                <option value="Intelligence artificiel">Intelligence artificiel</option>
                                                <option value="B2B">B2B</option>
                                                <option value="Investisement">Investisement</option>
                                                <option value="Transhumanisme">Transhumanisme</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Image</label>
                                            <input type="file" class="form-control" placeholder="image" value="Image">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>About Me</label>
                                            <textarea rows="5" class="form-control" placeholder="Here can be your description" value="Mike">Lamborghini Mercy, Your chick she so thirsty, I'm in that two seat Lambo.</textarea>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}