{% endblock %}
    {% block javascripts %}
        <script type="text/javascript">
            $(document).ready(function() {
                $("#ongletEntreprise").click(function () {
                    $(".inputEntreprise").removeClass("invisible");
                    $(".inputParticulier").addClass("invisible");
                    $(".inputEntreprise").addClass("visible");
                    $(".inputParticulier").removeClass("visible");
                    $(".inputCompany").css("margin-top", "46px");
                    $("div.row.jqueryTopModif").css("margin-top", "-46px");
                    $("div.modifCheck").css("margin-top", "58px");
                    $("div.row.jqueryMarginModif").css("margin-top", "46px").css("margin-bottom", "-46px");
                    $("button#particulier_save").addClass("invisible").remove("#particulier");
                    $("button#entreprise_save").removeClass("invisible");
                });
                $("#ongletParticulier").click(function () {
                    $(".inputEntreprise").addClass("invisible");
                    $(".inputParticulier").removeClass("invisible");
                    $(".inputEntreprise").removeClass("visible");
                    $(".inputParticulier").addClass("visible");
                    $(".inputCompany").css("margin-top", "-46px");
                    $("div.row.jqueryTopModif").css("margin-top", "0px");
                    $("div.row.jqueryMarginModif").css("margin-top", "0px");
                    $("button#entreprise_save").addClass("invisible");
                    $("button#particulier_save").removeClass("invisible");
                });
            });
        </script>
    {% endblock %}
