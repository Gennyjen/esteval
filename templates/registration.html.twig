    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $("#ongletEntreprise").click(function () {
                    $("#inputTva").prop('disabled', false);
                    $("#inputCompany").prop('disabled', false);
                    $("#inputFonction").prop('disabled', false);
                });
                $("#ongletParticulier").click(function () {
                    $("#inputTva").prop('disabled', true);
                    $("#inputCompany").prop('disabled', true);
                    $("#inputFonction").prop('disabled', true);
                });
            });
