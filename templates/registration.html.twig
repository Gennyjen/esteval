                <input type="password" class="form-control inputParticulier" aria-describedby="passConf" placeholder="Confirmation du mot de passe *" required>
                <input type="password" class="form-control invisible inputEntreprise" aria-describedby="passConf" placeholder="Confirmation du mot de passe *" required>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ form_widget(form.address) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(form.zip ) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.city ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                {{ form_widget(form.country ) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.phone ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ form_widget(form.fonction) }}
            </div>
        </div>
        <div class="row inputCompany">
            <div class="col-sm-6">
                {{ form_widget(form.company) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.tva) }}
