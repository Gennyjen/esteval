                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_widget(form.address) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_widget(form.zip ) }}
                </div>
                <div class="col-sm-6">
                    {{ form_widget(form.city ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_widget(form.country ) }}
                </div>
                <div class="col-sm-6">
                    {{ form_widget(form.phone ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
