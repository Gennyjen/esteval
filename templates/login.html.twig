{% extends "base.html.twig" %}

{% block body %}

    {% include('header.html.twig') %}

    <div class="modal-dialog modal-lg popupConnect">
        <div class="modal-content">

            <div class="container">
                <div class="row">

                    <div class="col-sm-6">
                        <div id="headerConnexion"  class="modal-header">
                            <h2 class="leftBottom">Connectez-vous...</h2>
                        </div>
                        <div class="modal-body">
                            <form class="connexion">
                                <div class="form-group">
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="adresse@email.fr">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Votre mot de passe">
                                </div>
                                <button type="submit" id="connexion" class="btn btn-primary">Me connecter !</button>
                                <a href="#">Mot de passe oublié?</a>
                                <p class="loginSocials">Ou connectez-vous directement...</p>
                            </form>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div id="headerInscription" class="modal-header">
                            <h2 class="rightBottom">Inscrivez-vous...</h2>
                        </div>
                        <div class="modal-body">
                            <form action="/registration" class="inscription" method="POST">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Nom">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Prénom">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="adresse@email.fr">
                                </div>
                                <div class="ligne">
                                    <div id="phrase">
                                        <p>Je suis</p>
                                        <p>(un choix possible)</p>
                                    </div>
                                    <div id="checkbox">
                                        <div id="checkEntreprise" class="form-check">
                                            <input type="checkbox" class="form-check-input" name="entreprise">
                                            <p>entreprise</p>
                                        </div>
                                        <div id="checkParticulier" class="form-check">
                                            <input type="checkbox" class="form-check-input" name="particulier">
                                            <p>particulier</p>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" id="inscription" class="btn btn-primary">M'inscrire !</button>
                                <p class="invitation">> Des infos quotidiennes</p>
                                <p class="invitation">> Consultez nos offres d'abonnements</p>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    {% include('footer.html.twig') %}

{% endblock %}